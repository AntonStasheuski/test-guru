<%= render 'shared/errors', resource: @badge %>
<%= form_for [:admin, @badge], :html => {:class => "form-horizontal center"} do |f| %>
  <div class="form-group">
    <%= f.label :title, t('.title'), class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image_url, t('.image'), class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :image_url, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, t('.description'), class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>
  <div class="dropdown col-md-8">
    <%=f.select :rule, [t('.first_try'), t('.category'), t('.level')], class: "btn btn-secondary dropdown-toggle col-md-1"%>
  </div>

  </div>
  <p></p>
  <div class="form-group">
    <%= f.label :value, t('.value'), class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :value, class: "form-control" %>
    </div>
  </div>

  <div class="col-md-8"><%= f.submit t('.submit'), class: "col-md-1 btn btn-default btn-primary" %></div>
<% end %>