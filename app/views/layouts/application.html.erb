<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <p class = "nav user">Welcome, <b> <%= current_user.name %> </b> Guru.
        <%= link_to "Test-Guru", root_path %>
        <%= link_to "Выйти", signout_path %>
      </p>
    <% else %>
      <% session[:requested_path] = request.env['PATH_INFO'] %>
      <p class = "nav user">
        <%= link_to "Регистрация", signup_path %>
        <%= link_to "Вход", login_path %>
      </p>
    <% end %>

    <%= yield %>
    <%= render 'shared/footer' %>
  </body>
</html>
